@{
    ViewData["Title"] = "Venues";
}

@model ClassLibrary.Value;



<h2>Manage your venues here</h2>


<h1>@ViewBag.Message</h1>
<div class="addVenue">
    <h2>Add Venue</h2>
    @using (Html.BeginForm("DeleteVenue", "Venues", FormMethod.Post))
    {
        @Html.DropDownList(
                                                    "id",
                                                    new SelectList(
                                                        Model.Venues.Select(x => new { Value = x.VenueId, Text = x.VenueName }),
                                                        "Value",
                                                        "Text"
                                                    )
                                                )

        <input type="submit" value="Delete" />

    }
</div>
@using (Html.BeginForm("AddVenue", "Venues", FormMethod.Post))
{
    <div class="addVenue">
        <h2>Add Venue</h2>
        Name:<br /><input type="text"><br />
        Address:<br /><input type="text"><br />
        City:<br /><input type="text"><br />
        Country:<br /><input type="text"><br />
        Seats:<br /><input type="text"><br /><br />

        <input type="submit" value="Add" style="width:50%" />
    </div>
}
