@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["EditVenues"];
}

@model ClassLibrary.Value;


<h1>@ViewBag.Message</h1>
<div id="content">
    <button onclick="location.href='@Url.Action("AddVenues", "Venues")'">@Localizer["AddVenue"]</button>
    <button>Edit Venue</button>
    <button onclick="location.href='@Url.Action("DeleteVenues", "Venues")'">@Localizer["DeleteVenue"]</button>

    <div class="venueDiv" id="editVenue" style="display:block">
        <hr />
        <h3>@Localizer["EditVenue"]</h3>
        <hr />
        @using (Html.BeginForm("EditVenues", "Venues", FormMethod.Post))
    {
        @Html.DropDownList(
                   "id",
                   new SelectList(Model.Venues.Select(x => new { Value = x.VenueId, Text = x.VenueName }),
                   "Value",
                   "Text"))


        @Html.LabelFor(m => m.Venue.VenueName, "Name")<br />
        @Html.TextBoxFor(m => m.Venue.VenueName, new { @required = true })<br />
        @Html.LabelFor(m => m.Venue.Address, "Address")<br />
        @Html.TextBoxFor(m => m.Venue.Address, new { @required = true })<br />
        @Html.LabelFor(m => m.Venue.City, "City")<br />
        @Html.TextBoxFor(m => m.Venue.City, new { @required = true })<br />
        @Html.LabelFor(m => m.Venue.Country, "Country")<br />
        @Html.TextBoxFor(m => m.Venue.Country, new { @required = true })<br />
        @Html.LabelFor(m => m.Venue.Seats, "Seats")<br />
        @Html.TextBoxFor(m => m.Venue.Seats, new { @required = true })<br />
        <input type="submit" style="background-color:dodgerblue" value=@Localizer["Add"] />
}
        <hr />
    </div>

</div>
@section Scripts
    {
    <script>
        function dropdown(value) {
            window.location.href = "/Venues/DropDownChanged?id=" + value;
        }
    </script>
}

