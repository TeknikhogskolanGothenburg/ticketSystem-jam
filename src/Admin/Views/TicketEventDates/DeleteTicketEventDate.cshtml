
@{
    ViewData["Title"] = "DeleteTicketEventDate";
}

@model ClassLibrary.Value;

<center><h2>Delete TicketEventDate</h2></center>

<table id="shoppingCartTable" align="center" style=" width:80%">

    <tr>
        <th>Event</th>
        <th>Venue</th>
        <th>Description</th>
        <th>Date</th>
        <th></th>
    </tr>
    @using (Html.BeginForm("RemoveTicketEventDate", "TicketEventDates", FormMethod.Post))
    {
        @foreach (var row in Model.EventSummaries)
        {
            <tr>
                <td>@row.EventName</td>
                <td>@row.VenueName</td>
                <td>@row.EventHtmlDescription</td>
                <td>@row.EventStartDateTime</td>
                <td><button type="submit" name="id" style="background-color:crimson" value=@row.TicketEventDateID>Delete</button></td>
            </tr>
        }
    }
</table>

