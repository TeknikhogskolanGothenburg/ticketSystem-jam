@{
    ViewData["Title"] = Localizer["Events"];
}

@model ClassLibrary.Value;
@using Microsoft.AspNetCore.Mvc.Localization

    @inject IViewLocalizer Localizer


<h1>@ViewBag.Message</h1>
<div id="content">
    <button onclick="location.href='@Url.Action("AddEvents", "Events")'">@Localizer["AddEvent"]</button>
    <button onclick="location.href='@Url.Action("EditEvents", "Events")'">@Localizer["EditEvent"]</button>
    <button onclick="location.href='@Url.Action("DeleteEvents", "Events")'">@Localizer["DeleteEvent"]</button>

</div>
