@model ClassLibrary.Value;

@*@using Microsoft.AspNetCore.Mvc.Localization

    @inject IViewLocalizer Localizer*@
@{
    var db = Model.EventSummaries;

}

    <div id="content">

        <h1 style="font-family: 'Agency FB'">Ticketshop</h1>
        <hr />
        <table id="shoppingCartTable">

            @using (Html.BeginForm("Checkout", "Checkout"))
            {
                <tr>
                    <th>Event</th>
                    <th>Venue</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Choose Ticket</th>
                </tr>
                @foreach (var row in db)
                {
                    <tr>
                        <td>@row.EventName</td>
                        <td>@row.VenueName</td>
                        <td>@row.EventHtmlDescription</td>
                        <td>@row.EventStartDateTime</td>
                        <td><button class="addToCartBtn" type="submit" value="@row.TicketEventDateID" name="buttonclick">Add to cart</button></td>
                    </tr>

                }
            }
        </table>
    </div>




@section Scripts
    {
    <script>
        function dropdown(value) {
            window.location.href = "/Shop/DropDownChanged?id=" + value;
        }
    </script>
}