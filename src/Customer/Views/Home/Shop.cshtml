<style type="text/css">
    #wrap {
        width: 1000px;
    }

    .left {
        width: 480px;
        float: left;
        text-align: center;
    }

    .right {
        width: 480px;
        float: right;
        text-align:center;
    }
</style>
<style>
    table, th, td {
        border: 2px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 5px;
        text-align: left;
    }

    table#jam tr:nth-child(even) {
        background-color: #eee;
    }

    table#jam tr:nth-child(odd) {
        background-color: #fff;
    }

    table#jam th {
        background-color: black;
        color: white;
    }

</style>

